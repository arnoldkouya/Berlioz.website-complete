{
  "name": "berlioz/config",
  "type": "library",
  "description": "Berlioz Configuration is a PHP library to manage your configuration files.",
  "minimum-stability": "stable",
  "license": "MIT",
  "homepage": "https://getberlioz.com",
  "authors": [
    {
      "name": "Ronan Giron",
      "email": "ronan@getberlioz.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Berlioz\\Config\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Berlioz\\Config\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.1 || ^8.0",
    "ext-json": "*",
    "berlioz/helpers": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5 || ^8.0 || ^9.0"
  }
}
