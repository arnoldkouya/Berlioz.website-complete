{
  "name": "berlioz/php-doc",
  "description": "Berlioz PhpDoc is a PHP library to read the documentations in code (classes, methods and functions) with advanced annotation interpretation.",
  "minimum-stability": "stable",
  "license": "MIT",
  "homepage": "https://getberlioz.com",
  "authors": [
    {
      "name": "Ronan Giron",
      "email": "ronan@getberlioz.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Berlioz\\PhpDoc\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Berlioz\\PhpDoc\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^7.1 || ^8.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "psr/simple-cache": "^1.0",
    "psr/log": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4 || ^8.0 || ^9.0"
  }
}
