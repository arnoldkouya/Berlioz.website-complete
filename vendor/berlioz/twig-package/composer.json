{
  "name": "berlioz/twig-package",
  "type": "berlioz-package",
  "description": "Twig package for Berlioz Framework",
  "license": "MIT",
  "homepage": "https://getberlioz.com",
  "authors": [
    {
      "name": "Ronan Giron",
      "email": "ronan@getberlioz.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Berlioz\\Package\\Twig\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Berlioz\\Package\\Twig\\Tests\\": "tests/",
      "Berlioz\\Package\\Twig\\TestProject\\": "tests/_envTest/src/"
    },
    "exclude-from-classmap": [
      "/tests/_envTest/"
    ]
  },
  "require": {
    "php": "^7.1 || ^8.0",
    "ext-intl": "*",
    "ext-json": "*",
    "berlioz/core": "^1.0",
    "berlioz/helpers": "^1.0",
    "twig/twig": "^2.7 || ^3.0",
    "psr/log": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5 || ^8.0 || ^9.0"
  },
  "config": {
    "berlioz": {
      "package": "Berlioz\\Package\\Twig\\TwigPackage"
    }
  }
}
